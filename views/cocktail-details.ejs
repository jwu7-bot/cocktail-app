<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= drink.strDrink %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body class="text-center p-5">
    <div class="container py-5 text-center">
      <!-- Cocktail Name -->
      <h1 class="mb-4"><%= drink.strDrink %></h1>

      <!-- Cocktail Image -->
      <img
        src="<%= drink.strDrinkThumb %>/small"
        alt="Cocktail Image"
        class="img-fluid rounded shadow mb-4"
        style="max-width: 400px"
      />

      <!-- Ingredients -->
      <h3 class="mb-3">ğŸ¹ Ingredients</h3>
      <ul class="list-group mb-4 mx-auto" style="max-width: 400px">
        <% ingredients.forEach(ing => { %>
          <li class="list-group-item"><%= ing %></li>
        <% }) %>
      </ul>

      <!-- Instructions -->
      <h3 class="mb-3">ğŸ§¾ Instructions</h3>
      <p class="lead mx-auto" style="max-width: 600px">
        <%= drink.strInstructions %>
      </p>

      <!-- Links -->
      <a href="/" class="btn btn-secondary mt-4">Back to Home</a>
      <a href="/search-name" class="btn btn-primary mt-4">Search name</a>
      <a href="/search-ingredient" class="btn btn-primary mt-4">Search ingredient</a>
    </div>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= categoryName %> - Cocktails</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body class="text-center p-5">
    <div class="container">
      <h1 class="mb-4"><%= categoryName %></h1>

      <!-- Category drinks -->
      <% if (drinks.length > 0) { %>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% drinks.forEach(drink => { %>
        <div class="col">
          <div class="card h-200 shadow-sm">
            <img
              src="<%= drink.strDrinkThumb %>"
              class="card-img-top"
              alt="<%= drink.strDrink %>"
            />
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= drink.strDrink %></h5>
              <a
                href="/cocktail/<%= drink.idDrink %>"
                class="btn btn-outline-secondary mt-auto"
                >View Recipe</a
              >
            </div>
          </div>
        </div>
        <% }) %>
      </div>

      <!-- Pagination -->
      <% if (totalPages > 1) { %>
      <nav class="mt-4">
        <ul class="pagination justify-content-center flex-wrap">
          <% if (page > 1) { %>
          <li class="page-item">
            <a
              class="page-link"
              href="/category/<%= encodeURIComponent(categoryName) %>?page=<%= page - 1 %>"
              >Previous</a
            >
          </li>
          <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === page ? 'active' : '' %>">
            <a
              class="page-link"
              href="/category/<%= encodeURIComponent(categoryName) %>?page=<%= i %>"
              ><%= i %></a
            >
          </li>
          <% } %> <% if (page < totalPages) { %>
          <li class="page-item">
            <a
              class="page-link"
              href="/category/<%= encodeURIComponent(categoryName) %>?page=<%= page + 1 %>"
              >Next</a
            >
          </li>
          <% } %>
        </ul>
      </nav>
      <% } %> <% } else { %>
      <p class="text-muted">No cocktails found in this category.</p>
      <% } %>

      <!-- Links -->
      <a href="/categories" class="btn btn-secondary mt-4"
        >Back to Categories</a
      >
      <a href="/" class="btn btn-primary mt-4">Home</a>

      <!-- Footer -->
      <%- include('partials/footer') %>
    </div>
  </body>
</html>

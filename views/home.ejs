<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cocktail App</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body class="text-center p-5">
    <div class="container">
      <!-- TITLE -->
      <h1 class="mb-4">Cocktail App</h1>

      <!-- TILES -->
      <div class="row g-4">
        <!-- Random Cocktail Tile -->
        <div class="col-6 col-md-3">
          <div
            class="random-tile card h-100"
            role="button"
            onclick="alert('Random Cocktail')"
          >
            <div class="card-body">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="64"
                height="64"
                fill="none"
                stroke="#e63946"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                viewBox="0 0 24 24"
              >
                <path d="M4 2h16l-6 12H10L4 2z" />
                <line x1="12" y1="14" x2="12" y2="22" />
                <line x1="8" y1="22" x2="16" y2="22" />
                <line x1="16" y1="2" x2="20" y2="6" />
              </svg>
              <p class="lead mt-2">Random<br />Cocktail</p>
            </div>
          </div>
        </div>

        <!-- Search By Name Tile -->
        <div class="col-6 col-md-3">
          <div
            class="name-tile card h-100"
            role="button"
            onclick="alert('Search by Name')"
          >
            <div class="card-body">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="64"
                height="64"
                fill="none"
                stroke="#457b9d"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                viewBox="0 0 24 24"
              >
                <circle cx="11" cy="11" r="8" />
                <line x1="21" y1="21" x2="16.65" y2="16.65" />
              </svg>
              <p class="lead mt-2">Search<br /> Name</p>
            </div>
          </div>
        </div>

        <!-- Search by Ingredients Tile -->
        <div class="col-6 col-md-3">
          <div
            class="ingredient-tile card h-100"
            role="button"
            onclick="alert('Search by Ingredient')"
          >
            <div class="card-body">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="64"
                height="64"
                fill="none"
                stroke="#f4a261"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                viewBox="0 0 24 24"
              >
                <path
                  d="M14 2l7 7-8.5 8.5a2.5 2.5 0 0 1-3.54 0l-3.46-3.46a2.5 2.5 0 0 1 0-3.54L14 2z"
                />
              </svg>
              <p class="lead mt-2">Search<br /> Ingredient</p>
            </div>
          </div>
        </div>

        <!-- Browse Categories Tile -->
        <div class="col-6 col-md-3">
          <div
            class="categories-tile card h-100"
            role="button"
            onclick="alert('Browse Categories')"
          >
            <div class="card-body">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="64"
                height="64"
                fill="none"
                stroke="#2a9d8f"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                viewBox="0 0 24 24"
              >
                <rect x="3" y="3" width="7" height="7" />
                <rect x="14" y="3" width="7" height="7" />
                <rect x="3" y="14" width="7" height="7" />
                <rect x="14" y="14" width="7" height="7" />
              </svg>
              <p class="lead mt-2">Browse<br />Categories</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

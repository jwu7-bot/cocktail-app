<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Search by Ingredient - Cocktail App</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body class="text-center p-2">
    <div class="container py-2 text-center">
      <h1 class="mb-4">Search Cocktails by Ingredient</h1>

      <!-- Search Form -->
      <form action="/search-ingredient" method="GET" class="mb-5">
        <div class="input-group mb-3">
          <input
            type="text"
            name="ingredient"
            class="form-control"
            placeholder="Enter an ingredient..."
            value="<%= searchTerm %>"
            required
          />
          <button class="btn btn-primary" type="submit">Search</button>
          <a href="/" class="btn btn-secondary ms-2">Home</a>
        </div>
      </form>

      <!-- Results Section -->
      <% if (drinks.length > 0) { %>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% drinks.forEach(drink => { %>
        <div class="col">
          <div class="card h-200 shadow-sm">
            <img
              src="<%= drink.strDrinkThumb %>"
              class="card-img-top"
              alt="<%= drink.strDrink %>"
            />
            <div class="card-body d-flex flex-column justify-content-between">
              <h5 class="card-title"><%= drink.strDrink %></h5>
              <a
                href="/cocktail/<%= drink.idDrink %>"
                class="btn btn-outline-secondary btn-sm mt-auto"
              >
                View Recipe
              </a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      <% } else if (searchTerm) { %>
      <p class="text-muted">No cocktails found with "<%= searchTerm %>".</p>
      <% } %>

      <!-- Pagination -->
      <% if (totalPages > 1) { %>
      <nav class="mt-4">
        <ul class="pagination justify-content-center flex-wrap">
          <% if (page > 1) { %>
          <li class="page-item">
            <a
              class="page-link"
              href="/search-ingredient?ingredient=<%= encodeURIComponent(searchTerm) %>&page=<%= page - 1 %>"
              >Previous</a
            >
          </li>
          <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === page ? 'active' : '' %>">
            <a
              class="page-link"
              href="/search-ingredient?ingredient=<%= encodeURIComponent(searchTerm) %>&page=<%= i %>"
              ><%= i %></a
            >
          </li>
          <% } %> <% if (page < totalPages) { %>
          <li class="page-item">
            <a
              class="page-link"
              href="/search-ingredient?ingredient=<%= encodeURIComponent(searchTerm) %>&page=<%= page + 1 %>"
              >Next</a
            >
          </li>
          <% } %>
        </ul>
      </nav>
      <% } %>

      <!-- Footer -->
      <%- include('partials/footer') %>
    </div>
  </body>
</html>
